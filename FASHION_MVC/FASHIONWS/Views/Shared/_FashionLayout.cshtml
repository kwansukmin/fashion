            @Html.Action("MenuDynamic","Home") <!-- phương thức 4/6-->

        </nav>
        <section id="mainContent">
            @RenderSection("sidebarLeft",false)
            
            <section id="mainContentFashion">
                @RenderBody()
            </section>

            @RenderSection("sidebarRight",false)
        </section>
