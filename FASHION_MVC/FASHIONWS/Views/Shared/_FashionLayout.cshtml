    @Scripts.Render("~/jquery/scrollbar/jquery-1.9.1.min.js", "~/jquery/scrollbar/CustomScrollbar.concat.min.js")
     <script>
         (function ($) {
             $(window).load(function () {
                 $(".customScroll").mCustomScrollbar({
                     scrollButtons: {
                         enable: true
                     },
                     theme: "dark-thick"
                 });
             });
         })(jQuery);
