            <ul class="main_nav">
                <li>@Html.ActionLink("Trang chủ","Index","Home")</li>
                <li><a href="#">Quần Áo Nam</a></li>
                <li><a href="#">Quần Áo Nữ</a></li>
                <li><a href="#">Phụ kiện thời trang</a></li>
                
            </ul>
            <div id="timkiem">
